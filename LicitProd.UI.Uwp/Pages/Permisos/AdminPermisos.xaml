<Page
    x:Class="LicitProd.UI.Uwp.Pages.Permisos.AdminPermisos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entities="using:LicitProd.Entities"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
            <TextBlock Text="Nuevo Permiso : " Margin="20 20 0 0"></TextBlock>
            <TextBox x:Name="txtNewPermiso" Width="250" Margin="20 20 0 0"></TextBox>
            <Button Margin="20 20 0 0" Click="Button_Click">Agregar</Button>
        </StackPanel>
        <muxc:TreeView x:Name="trvPermisos" SelectionMode="Multiple" >

        </muxc:TreeView>
    </StackPanel>
</Page>
