<Page x:Class="WpfApp1.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      xmlns:viewmodels="clr-namespace:WpfApp1.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="180" d:DesignWidth="300"
      Title="Login">
    <Page.DataContext>
        <viewmodels:LoginViewModel></viewmodels:LoginViewModel>
    </Page.DataContext>

    <Grid>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="330,225,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="label" Content="Usuario :" HorizontalAlignment="Left" Margin="59,46,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Password : " HorizontalAlignment="Left" Margin="46,77,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="23" Margin="139,46,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="139,81,0,0"  Password="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button1" Content="Conectar" HorizontalAlignment="Left" Margin="184,126,0,0" VerticalAlignment="Top" Width="75" Click="Button1_Click"/>

    </Grid>
</Page>
